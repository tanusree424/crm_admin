    <script>
    document.querySelector('input[name="custom_23"]').addEventListener('input', function() {
        var pincode = this.value;

        // Example: Fetch address details from a hypothetical API
        // Replace the URL with your actual API endpoint
        fetch('https://api.example.com/address?pincode=' + pincode)
            .then(response => response.json())
            .then(data => {
                if (data) {
                    document.querySelector('input[name="custom_24"]').value = data.city || '';
                    document.querySelector('input[name="custom_25"]').value = data.state || '';
                    document.querySelector('input[name="custom_26"]').value = data.country || '';
                } else {
                    // Clear fields if no data found
                    document.querySelector('input[name="custom_24"]').value = '';
                    document.querySelector('input[name="custom_25"]').value = '';
                    document.querySelector('input[name="custom_26"]').value = '';
                }
            })
            .catch(error => {
                console.error('Error fetching address details:', error);
                // Handle error (e.g., clear fields)
                document.querySelector('input[name="custom_24"]').value = '';
                document.querySelector('input[name="custom_25"]').value = '';
                document.querySelector('input[name="custom_26"]').value = '';
            });
    });
</script>
    <script>
        $.ajaxSetup({
            headers: {
                'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
            }
        });

        $(document).ready(function() {
            $('#email').on('blur', function() {
                let email = $(this).val();

                if (email) {
                    $.ajax({
                        url: '/admin/get-customer/adminlogin/' + email,
                        type: 'GET',
                        success: function(response) {
                            if (response.user_id) {
                                $('#user_id').val(response.user_id);
                                $('#EmailError').text('');
                                $('#modalMessage').text('Welcome back, existing user!');
                                // var link="<a class='btn btn-sm btn-outline-primary' href='/admin/customerprevioustickets/"+response.user_id+" target='_blank' rel='noopener noreferrer'>Previous Tickets</a>"
                                $('#modalMessage').append(
                                    "Click to check history : <a class='btn btn-sm btn-outline-primary' href='/admin/customerprevioustickets/" +
                                    response.user_id +
                                    "' target='_blank' rel='noopener noreferrer'>Previous Tickets</a>"
                                    );
                                $('#userModal').modal('show');
                            }
                        },
                        error: function(response) {
                            $('#user_id').val('');
                            $('#modalMessage').text('Hello, new user!');
                            $('#userModal').modal('show');
                        }
                    });
                }
            });
        });
    </script>
