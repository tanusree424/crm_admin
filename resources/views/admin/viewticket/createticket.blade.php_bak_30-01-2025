    <script>
document.querySelector('input[name="custom_3"]').addEventListener('blur', function() {
    var pinCode = this.value;

    if (pinCode.length === 6) { // Example length for pin codes, adjust as needed
        // Simulate fetching data from an API
        fetch(`http://postalpincode.in/api/pincode/${pinCode}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.querySelector('input[name="custom_4"]').value = data.city;
                    document.querySelector('input[name="custom_25"]').value = data.state;
                    document.querySelector('input[name="custom_26"]').value = data.country;
                } else {
                    // Handle error or invalid pin code
                    console.error('Invalid Pin Code');
                }
            })
            .catch(error => console.error('Error:', error));
    }
});
</script>
